{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ .Site.Title }}: {{ .Title }}</title>
    <link>{{ .Permalink }}</link>
    {{ with .OutputFormats.Get "atom" }}
      <atom:link rel="alternate" type="{{ .MediaType }}" href="{{ .Permalink }}" />
    {{ end }}
    {{ with .OutputFormats.Get "rss" }}
      <atom:link rel="self" type="{{ .MediaType }}" href="{{ .Permalink }}" />
    {{ end }}
    <description>{{ .Description }}</description>
    <language>{{ .Site.Language.LanguageCode }}</language>
    <copyright>{{ .Site.Copyright }}</copyright>
    <lastBuildDate>{{ .Lastmod.UTC.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    <generator>Hugo</generator>
    <docs>https://www.rssboard.org/rss-specification</docs>
    <ttl>10080</ttl>
    {{ $pages := .RegularPages }}
    {{ if .IsHome }}
      {{ $pages = .Site.RegularPages }}
    {{ end }}
    {{ range $pages }}
      <item>
        <title>{{ .Title }}</title>
        <link>{{ .Permalink }}</link>
        <guid>{{ .Permalink }}</guid>
        <pubDate>{{ .Lastmod.UTC.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
        <description>{{ .Description }}</description>
        <content:encoded>{{ .Content | transform.XMLEscape }}</content:encoded>
      </item>
    {{ end }}
  </channel>
</rss>
